---
import Editor from "../components/Editor";
import MobileNav from "../components/MobileNav";
import Sidebar from "../components/Sidebar";
import Layout from "../layouts/Layout.astro";
---

<Layout title="draw2ui - Draw to UI with AI">
	<div class="flex h-[100dvh] w-screen overflow-hidden">
		{/* Sidebar is hidden on mobile by CSS or state inside component, but we need to structure it properly */}
		<div class="hidden md:block h-full relative z-20">
			<Sidebar client:load />
		</div>

		<div class="flex-1 flex flex-col h-full relative z-10">
			{/* Editor handles the main view (whiteboard + result) */}
			<Editor client:only="react" />
		</div>

		{/* Mobile Navigation */}
		<MobileNav client:media="(max-width: 768px)" />
	</div>
</Layout>
